<Window x:Class="LPG_Management_System.PointOfSale"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LPG_Management_System"
        mc:Ignorable="d"
        Title="PointOfSale" Height="850" Width="1500" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" WindowStyle="None" WindowState="Maximized">
    <Grid Background="#FF8ECAE6" Margin="-5,1,-2,0">
        <Button Content="Home" HorizontalAlignment="Left" Height="89" Margin="8,736,0,0" VerticalAlignment="Top" Width="169" RenderTransformOrigin="0.79,0.887" Click="Button_Click" FontSize="22"/>
