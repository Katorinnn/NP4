<Window x:Class="LPG_Management_System.View.UserControls.InvoicePage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Invoice" Height="600" Width="600" WindowStartupLocation="CenterScreen">
    <Grid>
        <!-- Customer Info Section -->
        <StackPanel Orientation="Horizontal" Margin="10">
            <TextBlock Text="Customer Name: " FontSize="16" VerticalAlignment="Center"/>
            <TextBlock x:Name="CustomerNameText" FontSize="16" VerticalAlignment="Center"/>
        </StackPanel>

        <!-- DataGrid for Invoice Items -->
        <DataGrid x:Name="InvoiceDataGrid" Margin="10,50,10,100" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Item" Binding="{Binding Brand}" Width="*"/>
                <DataGridTextColumn Header="Size" Binding="{Binding Size}" Width="100"/>
                <DataGridTextColumn Header="Price" Binding="{Binding Price}" Width="100"/>
                <DataGridTextColumn Header="Quantity" Binding="{Binding Quantity}" Width="100"/>
                <DataGridTextColumn Header="Total" Binding="{Binding Total}" Width="100" IsReadOnly="True"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Total and Payment Information -->
        <StackPanel Orientation="Horizontal" Margin="10,0,10,10" VerticalAlignment="Bottom">
            <TextBlock Text="Total Amount: " FontSize="16" VerticalAlignment="Center"/>
            <TextBlock x:Name="TotalAmountText" FontSize="16" VerticalAlignment="Center"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Margin="10,0,10,10" VerticalAlignment="Bottom">
            <TextBlock Text="Amount Paid: " FontSize="16" VerticalAlignment="Center"/>
            <TextBlock x:Name="AmountPaidText" FontSize="16" VerticalAlignment="Center"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Margin="10,0,10,10" VerticalAlignment="Bottom">
            <TextBlock Text="Change: " FontSize="16" VerticalAlignment="Center"/>
            <TextBlock x:Name="ChangeText" FontSize="16" VerticalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>
