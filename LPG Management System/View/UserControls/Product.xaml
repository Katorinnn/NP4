<UserControl x:Class="LPG_Management_System.View.UserControls.Product"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LPG_Management_System.View.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="150" d:DesignWidth="150" Foreground="White" Margin="5,5,5,5">
    <Border BorderBrush="Black" BorderThickness="2" CornerRadius="5">
        <Grid>
            <Label x:Name="BrandLabel" Content="Brandname" HorizontalAlignment="Left" Margin="15,124,0,0" VerticalAlignment="Top"/>
            <Label x:Name="PriceLabel" Content="Price" HorizontalAlignment="Left" Margin="102,125,0,0" VerticalAlignment="Top" Width="50" RenderTransformOrigin="0.479,-0.929"/>
            <Image x:Name="ProductImage" Height="111" Margin="30,10,38,0" VerticalAlignment="Top" />
        </Grid>
    </Border>
</UserControl>
