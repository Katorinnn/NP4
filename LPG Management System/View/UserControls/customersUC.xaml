<UserControl x:Name="dashboard" x:Class="LPG_Management_System.View.UserControls.customersUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LPG_Management_System.View.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="850" d:DesignWidth="1200" Width="1200" Height="850">
    <Grid x:Name="mainGrid">
        <Grid Margin="38,52,26,27" Background="White">
            <Grid.RowDefinitions>
                <RowDefinition Height="106*"/>
                <RowDefinition Height="665*"/>
            </Grid.RowDefinitions>
            <DataGrid x:Name="customersDG" Grid.Row="1" d:ItemsSource="{d:SampleData ItemCount=5}" SelectionChanged="DataGrid_SelectionChanged" MaxColumnWidth="150" MinColumnWidth="153" CanUserResizeColumns="False"/>
            <Button x:Name="newBtn" Content="New" HorizontalAlignment="Left" Margin="979,0,0,0" VerticalAlignment="Center" Width="147" Height="50" Click="newBtn_Click" Cursor="Hand"/>
            <TextBox HorizontalAlignment="Left" Height="26" Margin="44,52,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="251" TextChanged="TextBox_TextChanged" Text="search "/>
        </Grid>
       
    </Grid>
</UserControl>
