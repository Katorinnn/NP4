<UserControl x:Class="LPG_Management_System.View.UserControls.inventoryUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LPG_Management_System.View.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="850" d:DesignWidth="1230" Cursor="Hand">
    <Grid x:Name="mainGrid">
        <Grid Margin="0,0,0,-10">
            <Grid.Background>
                <LinearGradientBrush StartPoint="1,0" EndPoint="1,1">
                    <GradientStop Color="WhiteSmoke" Offset="0.1" />
                    <GradientStop Color="#8ecae6" Offset="2.0" />
                </LinearGradientBrush>
            </Grid.Background>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" MinHeight="132"/>
                <!-- For Search and Button -->
                <RowDefinition/>
                <!-- For DataGrid -->
            </Grid.RowDefinitions>

            <!-- Search TextBox -->

            <!-- StackPanel for New Button -->
            <Grid HorizontalAlignment="Left" Height="36" Margin="330,135,0,0" Grid.Row="1" VerticalAlignment="Top" Width="39" OpacityMask="Black" Background="#FF7C7C7C"/>
            <Grid HorizontalAlignment="Left" Height="34" Margin="330,136,0,0" Grid.Row="1" VerticalAlignment="Top" Width="38" OpacityMask="Black" Background="White"/>

            <!-- StackPanel for New Button -->
            <Button x:Name="FilterButton" Content="" Width="32" Height="29" VerticalAlignment="Top" 
                    HorizontalAlignment="Left" Margin="334,139,0,0" Grid.Row="1" BorderBrush="{x:Null}">
                <Button.Background>
                    <ImageBrush ImageSource="/View/UserControls/setting.png"/>
                </Button.Background>
                <Button.ContextMenu>
                    <ContextMenu>
                        <MenuItem Header="Filter by Brand" />
                        <MenuItem Header="Filter by Size"/>
                    </ContextMenu>
                </Button.ContextMenu>
            </Button>

            <Button x:Name="ClearFilterButton" Content="Clear" Width="67" Height="36" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="383,135,0,0" Click="ClearFilterButton_Click" Grid.Row="1"/>
            <TextBox x:Name="TextBox" 
                     HorizontalAlignment="Left" 
                     Background="WhiteSmoke" 
                     Height="36" 
                     Margin="30,135,0,0" 
                     VerticalAlignment="Top" 
                     Width="300" 
                     TextWrapping="Wrap" 
                     FontSize="14" 
                     Padding="5" 
                     BorderThickness="1" 
                     BorderBrush="Gray" 
                     Foreground="Gray"
                     Text="Search here" 
                     GotFocus="TextBox_GotFocus" 
                     LostFocus="TextBox_LostFocus" 
                     Grid.Row="1" />

            <!-- StackPanel for New Button -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="1050,10,0,10" Width="100">
                <!-- New Button -->

            </StackPanel>

            <!-- DataGrid -->
            <DataGrid x:Name="inventoryDG" Grid.Row="1" Margin="12,185,12,40"
                      CanUserResizeColumns="False" GridLinesVisibility="None" 
                      CanUserReorderColumns="False"
                      HorizontalGridLinesBrush="LightGray"
                      VerticalGridLinesBrush="LightGray" BorderBrush="Gray" BorderThickness="1"
                      CanUserAddRows="False" IsReadOnly="True" SelectionMode="Single" 
                      SelectionUnit="FullRow" AutoGenerateColumns="False" MinRowHeight="30" 
                      RowHeaderWidth="0" FontFamily="Segoe UI"
                      HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto" 
                      ScrollViewer.CanContentScroll="True"  Height="500" Width="1200"
                      AlternatingRowBackground="#F5F5F5" AlternationCount="2" >

                <!-- DataGrid Column Header Style -->
                <DataGrid.ColumnHeaderStyle>
                    <Style TargetType="{x:Type DataGridColumnHeader}">
                        <Setter Property="Background" Value="SteelBlue"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="FontWeight" Value="Bold"/>
                        <Setter Property="FontSize" Value="15"/>
                        <Setter Property="HorizontalContentAlignment" Value="Left"/>
                        <Setter Property="Padding" Value="10"/>
                        <Setter Property="FontFamily" Value="Segoe UI"/>
                    </Style>
                </DataGrid.ColumnHeaderStyle>

                <!-- DataGrid Row Style -->
                <DataGrid.RowStyle>
                    <Style TargetType="{x:Type DataGridRow}">
                        <Setter Property="FontSize" Value="14"/>
                        <Setter Property="Foreground" Value="Black"/>
                        <Setter Property="Background" Value="White"/>
                        <Setter Property="BorderThickness" Value="0,0,0,1"/>
                        <Setter Property="BorderBrush" Value="LightGray"/>
                        <Setter Property="FontFamily" Value="Segoe UI"/>
                    </Style>
                </DataGrid.RowStyle>

                <!-- Define DataGrid Columns -->
                <DataGrid.Columns>
                    <!-- <DataGridTextColumn Header="Tank ID" Binding="{Binding TankID}" Width="210" /> -->
                    <DataGridTextColumn Header="StocksID" Binding="{Binding StocksID}" Width="210" />
                    <DataGridTextColumn Header="Brand" Binding="{Binding ProductName}" Width="210" />
                    <DataGridTextColumn Header="Size (kg.)" Binding="{Binding Size}" Width="210" />
                    <DataGridTextColumn Header="Stocks" Binding="{Binding Stocks}" Width="220" />
                    <DataGridTextColumn Header="Price" Binding="{Binding Price}" Width="220" />
                    <DataGridTextColumn Header="Date" Binding="{Binding Date}" Width="210" />

                    <!-- Actions Column (Edit and Delete Buttons) -->
                    <DataGridTemplateColumn Header="Actions" Width="220">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                                    <!-- Edit Button -->
                                    <Button x:Name="editButton" 
                                            Tag="{Binding TankID}" 
                                            Click="EditButton_Click" 
                                            Width="45" 
                                            Height="45" 
                                            Background="Green" 
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Padding="5">
                                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                                            <Image Source="/Images/edit.png" Height="20"/>
                                        </StackPanel>
                                    </Button>

                                    <!-- Delete Button -->
                                    <Button Width="45" 
                                            Height="45"
                                            Margin="5,0,5,0"
                                            Background="#FF4500" 
                                            Foreground="WhiteSmoke" 
                                            Cursor="Hand"
                                            Tag="{Binding TankID}" FontFamily="Segoe UI"
                                            Click="DeleteButton_Click">

                                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                                            <Image Source="/Images/trash.png" Height="20" />
                                        </StackPanel>
                                    </Button>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
            <Button x:Name="newBtn" Content="New LPG Brand" 
                Click="newBtn_Click" Cursor="Hand" Background="#0078D7" Foreground="White" Height="36"
                FontWeight="Bold" BorderThickness="0" BorderBrush="Transparent"
                FontFamily="Segou UI" Margin="1078,138,19,554"  Grid.Row="1" RenderTransformOrigin="0.498,0.367"/>
        </Grid>
    </Grid>
</UserControl>
