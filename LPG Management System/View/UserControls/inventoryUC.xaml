<UserControl x:Class="LPG_Management_System.View.UserControls.inventoryUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LPG_Management_System.View.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="850" d:DesignWidth="1230" Cursor="Hand">

    <UserControl.Resources>
        <!-- Style for the Toggle Buttons -->
        <Style x:Key="ViewToggleButtonStyle" TargetType="ToggleButton">
            <Setter Property="Width" Value="100" />
            <Setter Property="Height" Value="40" />
            <Setter Property="Margin" Value="5" />
            <Setter Property="FontFamily" Value="Segoe UI" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Background" Value="#1E1E2C" />
            <Setter Property="BorderBrush" Value="#444" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="20">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <!-- Change color when toggled -->
                <Trigger Property="IsChecked" Value="True">
                    <Setter Property="Background" Value="#0078D7" />
                    <Setter Property="Foreground" Value="White" />
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Grid x:Name="mainGrid">
        <Grid Margin="0,0,0,-10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="583*"/>
                <ColumnDefinition Width="32*"/>
            </Grid.ColumnDefinitions>
            <Grid.Background>
                <LinearGradientBrush StartPoint="1,0" EndPoint="1,1">
                    <GradientStop Color="WhiteSmoke" Offset="0.1" />
                    <GradientStop Color="#8ecae6" Offset="2.0" />
                </LinearGradientBrush>
            </Grid.Background>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" MinHeight="96"/>
                <!-- For Search and Button -->
                <RowDefinition/>
                <!-- For DataGrid -->
            </Grid.RowDefinitions>

            <Border Background="#003566" Height="70" VerticalAlignment="Top" CornerRadius="0,0,0,0" Grid.ColumnSpan="2">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="20,0,0,0">
                    <Image Source="/Images/inventory.png" Height="60" Margin="10,0" VerticalAlignment="Center"/>
                    <TextBlock x:Name="PreviousButton" Text="INVENTORY" 
                   Foreground="White" 
                   FontFamily="Segoe UI" 
                   FontWeight="Bold" 
                   FontSize="36" 
                   VerticalAlignment="Center" 
                   Margin="20,0,0,0"/>
                </StackPanel>
            </Border>



            <!-- DataGrid -->
            <DataGrid x:Name="inventoryDG" Grid.Row="1" Margin="15,130,15,47"
                      CanUserResizeColumns="False" GridLinesVisibility="None"
                      HorizontalGridLinesBrush="LightGray"
                      VerticalGridLinesBrush="LightGray" BorderBrush="Gray" BorderThickness="1"
                      CanUserAddRows="False" IsReadOnly="True" SelectionMode="Single" 
                      SelectionUnit="FullRow" AutoGenerateColumns="False" MinRowHeight="30" 
                      RowHeaderWidth="0" FontFamily="Segoe UI"
                      HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto" 
                      ScrollViewer.CanContentScroll="True"
                      AlternatingRowBackground="#F5F5F5" AlternationCount="2" Grid.ColumnSpan="2" CanUserReorderColumns="False" >

                <!-- DataGrid Column Header Style -->
                <DataGrid.ColumnHeaderStyle>
                    <Style TargetType="{x:Type DataGridColumnHeader}">
                        <Setter Property="Background" Value="SteelBlue"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="FontWeight" Value="Bold"/>
                        <Setter Property="FontSize" Value="15"/>
                        <Setter Property="HorizontalContentAlignment" Value="Left"/>
                        <Setter Property="Padding" Value="10"/>
                        <Setter Property="FontFamily" Value="Segoe UI"/>
                    </Style>
                </DataGrid.ColumnHeaderStyle>

                <!-- DataGrid Row Style -->
                <DataGrid.RowStyle>
                    <Style TargetType="{x:Type DataGridRow}">
                        <Setter Property="FontSize" Value="14"/>
                        <Setter Property="Foreground" Value="Black"/>
                        <Setter Property="Background" Value="White"/>
                        <Setter Property="BorderThickness" Value="0,0,0,1"/>
                        <Setter Property="BorderBrush" Value="LightGray"/>
                        <Setter Property="FontFamily" Value="Segoe UI"/>
                    </Style>
                </DataGrid.RowStyle>

                <!-- Define DataGrid Columns -->
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Stock ID" Binding="{Binding StocksID}" Width="170" />
                    <DataGridTextColumn Header="Brand" Binding="{Binding ProductName}" Width="170" />
                    <DataGridTextColumn Header="Size" Binding="{Binding Size}" Width="170" />
                    <DataGridTextColumn Header="Stocks" Binding="{Binding Stocks}" Width="170" />
                    <DataGridTextColumn Header="Price" Binding="{Binding Price, StringFormat=₱{0:F2}}" Width="150" />
                    <DataGridTextColumn Header="Date" Binding="{Binding Date}" Width="210" />

                    <!-- Actions Column (Edit and Delete Buttons) -->
                    <DataGridTemplateColumn Header="Actions" Width="220">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                                    <!-- Edit Button -->
                                    <Button x:Name="editButton" 
                                            Tag="{Binding StocksID}" 
                                            Click="EditButton_Click" 
                                            Width="45" 
                                            Height="45" 
                                            Background="Green" 
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Padding="5">
                                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                                            <Image Source="/Images/edit.png" Height="20"/>
                                        </StackPanel>
                                    </Button>

                                    <!-- Delete Button -->
                                    <Button Width="45" 
                                            Height="45"
                                            Margin="5,0,5,0"
                                            Background="#FF4500" 
                                            Foreground="WhiteSmoke" 
                                            Cursor="Hand"
                                            Tag="{Binding StocksID}" FontFamily="Segoe UI"
                                            Click="DeleteButton_Click">

                                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                                            <Image Source="/Images/trash.png" Height="20" />
                                        </StackPanel>
                                    </Button>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>

            <Button x:Name="newBtn" Content="New LPG Brand" 
                Click="newBtn_Click" Cursor="Hand" Background="#0078D7" Foreground="White"
                FontWeight="Bold" BorderThickness="0" BorderBrush="Transparent"
                FontFamily="Segou UI" Margin="23,83,1010,649" RenderTransformOrigin="0.498,0.367" Grid.Row="1"/>

            <UniformGrid Rows="1" Columns="2" Margin="998,72,15,629" Grid.ColumnSpan="2" Grid.Row="1">
                <ToggleButton x:Name="listViewButton" Content="List" 
                  Style="{StaticResource ViewToggleButtonStyle}"
                  IsChecked="True" Margin="4,2,4,21" Click="ListView_Click"/>
                <ToggleButton x:Name="gridViewButton" Content="Grid" 
                Style="{StaticResource ViewToggleButtonStyle}" Margin="4,2,4,21" Click="GridView_Click"/>

                <!-- Grid View Button -->
            </UniformGrid>

            <!-- List View -->

            <!-- Product View -->
            <ScrollViewer x:Name="ProductScrollViewer" Grid.Row="1"  Grid.ColumnSpan="2" Margin="15,130,15,47" Visibility="Collapsed" Background="White">
                <WrapPanel x:Name="ProductsWrapPanel" Margin="10" Width="1180">
                </WrapPanel>
            </ScrollViewer>
        </Grid>
    </Grid>
</UserControl>
