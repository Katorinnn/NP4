<UserControl x:Class="LPG_Management_System.View.UserControls.inventoryUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LPG_Management_System.View.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="850" d:DesignWidth="1230" Cursor="Hand">
    <Grid x:Name="mainGrid">
        <Grid Margin="0,0,0,-10">
            <Grid.Background>
                <LinearGradientBrush StartPoint="1,0" EndPoint="1,1">
                    <GradientStop Color="WhiteSmoke" Offset="0.1" />
                    <GradientStop Color="#8ecae6" Offset="2.0" />
                </LinearGradientBrush>
            </Grid.Background>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" MinHeight="132"/>
                <!-- For Search and Button -->
                <RowDefinition/>
                <!-- For DataGrid -->
            </Grid.RowDefinitions>

            <Border Background="#003566" Height="83" VerticalAlignment="Top" CornerRadius="0,0,0,0">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="20,0,0,0">
                    <Image Source="/Images/inventory.png" Height="70" Margin="10,0" VerticalAlignment="Center"/>
                    <TextBlock Text="INVENTORY" 
                   Foreground="White" 
                   FontFamily="Segoe UI" 
                   FontWeight="Bold" 
                   FontSize="36" 
                   VerticalAlignment="Center" 
                   Margin="20,0,0,0"/>
                </StackPanel>
            </Border>


            <!-- StackPanel for New Button -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="1050,10,0,10" Width="100">
                <!-- New Button -->

            </StackPanel>

            <!-- DataGrid -->
            <DataGrid x:Name="inventoryDG" Grid.Row="1" Margin="12,185,12,40"
                      CanUserResizeColumns="False" GridLinesVisibility="None"
                      HorizontalGridLinesBrush="LightGray"
                      VerticalGridLinesBrush="LightGray" BorderBrush="Gray" BorderThickness="1"
                      CanUserAddRows="False" IsReadOnly="True" SelectionMode="Single" 
                      SelectionUnit="FullRow" AutoGenerateColumns="False" MinRowHeight="30" 
                      RowHeaderWidth="0" FontFamily="Segoe UI"
                      HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto" 
                      ScrollViewer.CanContentScroll="True"  Height="500" Width="1200"
                      AlternatingRowBackground="#F5F5F5" AlternationCount="2" >

                <!-- DataGrid Column Header Style -->
                <DataGrid.ColumnHeaderStyle>
                    <Style TargetType="{x:Type DataGridColumnHeader}">
                        <Setter Property="Background" Value="SteelBlue"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="FontWeight" Value="Bold"/>
                        <Setter Property="FontSize" Value="15"/>
                        <Setter Property="HorizontalContentAlignment" Value="Left"/>
                        <Setter Property="Padding" Value="10"/>
                        <Setter Property="FontFamily" Value="Segoe UI"/>
                    </Style>
                </DataGrid.ColumnHeaderStyle>

                <!-- DataGrid Row Style -->
                <DataGrid.RowStyle>
                    <Style TargetType="{x:Type DataGridRow}">
                        <Setter Property="FontSize" Value="14"/>
                        <Setter Property="Foreground" Value="Black"/>
                        <Setter Property="Background" Value="White"/>
                        <Setter Property="BorderThickness" Value="0,0,0,1"/>
                        <Setter Property="BorderBrush" Value="LightGray"/>
                        <Setter Property="FontFamily" Value="Segoe UI"/>
                    </Style>
                </DataGrid.RowStyle>

                <!-- Define DataGrid Columns -->
                <DataGrid.Columns>
                    <!-- <DataGridTextColumn Header="Tank ID" Binding="{Binding TankID}" Width="210" /> -->
                    <DataGridTextColumn Header="Stock ID" Binding="{Binding StocksID}" Width="170" />
                    <DataGridTextColumn Header="Brand" Binding="{Binding ProductName}" Width="170" />
                    <DataGridTextColumn Header="Size" Binding="{Binding Size}" Width="170" />
                    <DataGridTextColumn Header="Stocks" Binding="{Binding Stocks}" Width="170" />
                    <DataGridTextColumn Header="Price" Binding="{Binding Price, StringFormat=₱{0:F2}}" Width="150" />
                    <DataGridTextColumn Header="Date" Binding="{Binding Date}" Width="210" />

                    <!-- Actions Column (Edit and Delete Buttons) -->
                    <DataGridTemplateColumn Header="Actions" Width="220">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                                    <!-- Edit Button -->
                                    <Button x:Name="editButton" 
                                            Tag="{Binding StocksID}" 
                                            Click="EditButton_Click" 
                                            Width="45" 
                                            Height="45" 
                                            Background="Green" 
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Padding="5">
                                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                                            <Image Source="/Images/edit.png" Height="20"/>
                                        </StackPanel>
                                    </Button>

                                    <!-- Delete Button -->
                                    <Button Width="45" 
                                            Height="45"
                                            Margin="5,0,5,0"
                                            Background="#FF4500" 
                                            Foreground="WhiteSmoke" 
                                            Cursor="Hand"
                                            Tag="{Binding TankID}" FontFamily="Segoe UI"
                                            Click="DeleteButton_Click">

                                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                                            <Image Source="/Images/trash.png" Height="20" />
                                        </StackPanel>
                                    </Button>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
            <Button x:Name="newBtn" Content="New LPG Brand" 
                Click="newBtn_Click" Cursor="Hand" Background="#0078D7" Foreground="White" Height="36"
                FontWeight="Bold" BorderThickness="0" BorderBrush="Transparent"
                FontFamily="Segou UI" Margin="1078,132,19,560"  Grid.Row="1" RenderTransformOrigin="0.498,0.367"/>
        </Grid>
    </Grid>
</UserControl>
