<UserControl x:Class="LPG_Management_System.View.UserControls.reportsUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LPG_Management_System.View.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="850" d:DesignWidth="1220" >

    <UserControl.Resources>
        <LinearGradientBrush x:Key="BackgroundGradient" StartPoint="1,0" EndPoint="1,1">
            <GradientStop Color="WhiteSmoke" Offset="0.1" />
            <GradientStop Color="#8ecae6" Offset="2.0" />
        </LinearGradientBrush>
    </UserControl.Resources>

    <Grid Background="{StaticResource BackgroundGradient}">
        <!-- DataGrid for displaying reports -->
        <DataGrid x:Name="reportsDG" 
                  HorizontalAlignment="Center" 
                  Height="580" 
                  Margin="0,202,0,0" 
                  VerticalAlignment="Top" 
                  Width="1190" 
                  IsReadOnly="True" 
                  HorizontalScrollBarVisibility="Auto" 
                  VerticalScrollBarVisibility="Auto"
                  CanUserReorderColumns="False"
                  CanUserResizeColumns="False" 
                  AutoGenerateColumns="False">



            <!-- Define the columns with TextWrapping using a TemplateColumn -->
            <DataGrid.Columns>
                <DataGridTextColumn Header="Transaction ID" Width="120" Binding="{Binding TransactionID}"  />
                <DataGridTemplateColumn Header="Tank ID" Width="140" >
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding TankID}" TextWrapping="Wrap" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <!-- Column with text wrapping -->
                <DataGridTemplateColumn Header="Product Name" Width="140" >
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding ProductName}" TextWrapping="Wrap" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTextColumn Header="Quantity" Width="100" Binding="{Binding Quantity}" />
                <DataGridTextColumn Header="Unit Price" Width="100" Binding="{Binding UnitPrice}" />
                <DataGridTextColumn Header="Total Price" Width="100" Binding="{Binding TotalPrice}" />
                <DataGridTextColumn Header="Payment Method" Width="140" Binding="{Binding PaymentMethod}" />

                <DataGridTextColumn Header="Paid Amount" Width="140" Binding="{Binding PaidAmount}" />
                <!--<DataGridTextColumn Header="Change Given" Width="*" Binding="{Binding ChangeGiven}" />-->
                <DataGridTextColumn Header="Date" Width="*" Binding="{Binding Date, StringFormat='dd/MM/yyyy hh:mm:ss'}" />
                <!--<DataGridTextColumn Header="Status" Width="*" Binding="{Binding Status}" /> -->
            </DataGrid.Columns>
        </DataGrid>

        <!-- Header panel with labels (for selecting report filters) -->
        <Grid HorizontalAlignment="Center" Height="94" VerticalAlignment="Top" Width="1190" Background="WhiteSmoke" Margin="0,103,0,0">
            <Label Content="Category" HorizontalAlignment="Left" Height="28" Margin="18,38,0,0" VerticalAlignment="Top" Width="106" FontSize="14" FontWeight="Bold"/>
            <Label Content="Begin Date" HorizontalAlignment="Left" Height="28" VerticalAlignment="Top" Width="106" FontSize="14" FontWeight="Bold" Margin="348,38,0,0"/>
            <Label Content="End Date" HorizontalAlignment="Left" Height="28" Margin="695,38,0,0" VerticalAlignment="Top" Width="106" FontSize="14" FontWeight="Bold"/>
        </Grid>

        <!-- DatePickers and ComboBox below the header -->
        <DatePicker x:Name="beginDatePicker" HorizontalAlignment="Left" Height="30" Margin="458,140,0,0" VerticalAlignment="Top" Width="200" FontSize="14" />
        <DatePicker x:Name="endDatePicker" HorizontalAlignment="Left" Height="30" Margin="791,140,0,0" VerticalAlignment="Top" Width="200" FontSize="14" />
        <ComboBox x:Name="categoryComboBox" HorizontalAlignment="Left" Height="30" Margin="116,140,0,0" VerticalAlignment="Top" Width="200" FontSize="14" SelectionChanged="categoryComboBox_SelectionChanged"/>

        <!-- Pagination Controls -->
        <Button HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="45" Height="30" Margin="523,0,0,23" Click="PreviousButton_Click" Background="AliceBlue">
            <Button.Content>
                <Image Source="/View/UserControls/back.png"/>
            </Button.Content>
        </Button>

        <Button HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="45" Height="30" Margin="0,0,520,23" Click="NextButton_Click" Background="AliceBlue" BorderBrush="{x:Null}">
            <Button.Content>
                <Image Source="/View/UserControls/next.png" />
            </Button.Content>
        </Button>

        <!-- Page Indicator -->
        <TextBlock x:Name="pageIndicator" HorizontalAlignment="Center" VerticalAlignment="Bottom" FontSize="16" Margin="0,0,0,30" Foreground="Black"/>


        <Button Content="Apply" HorizontalAlignment="Left" Margin="1018,132,0,0" VerticalAlignment="Top" Width="82" FontSize="16" Click="ApplyFilterButton_Click" Height="36"/>

        <Button Content="Clear" HorizontalAlignment="Left" Margin="1111,132,0,0" VerticalAlignment="Top" Width="83" Height="36" FontSize="16" FontWeight="Bold" Background="Red" Foreground="White" Click="CancelFilterButton_Click"/>

        <Button Content="Export Data" HorizontalAlignment="Left" Margin="1082,795,0,0" VerticalAlignment="Top" Width="123" Click="PrintPreview_Click" Height="34" Background="#2ecc71" Foreground="White"/>

    </Grid>


</UserControl>