<UserControl x:Class="LPG_Management_System.View.UserControls.reportsUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LPG_Management_System.View.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="850" d:DesignWidth="1220" >

    <UserControl.Resources>
        <LinearGradientBrush x:Key="BackgroundGradient" StartPoint="1,0" EndPoint="1,1">
            <GradientStop Color="WhiteSmoke" Offset="0.1" />
            <GradientStop Color="#8ecae6" Offset="2.0" />
        </LinearGradientBrush>
    </UserControl.Resources>

    <Grid Background="{StaticResource BackgroundGradient}">
        <Grid.RowDefinitions>
            <RowDefinition Height="199*"/>
            <RowDefinition Height="651*"/>
        </Grid.RowDefinitions>

        <Border Background="#003566" Height="70" VerticalAlignment="Top" CornerRadius="0,0,0,0" Margin="-2,0,0,0">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="20,0,0,0">
                <Image Source="/Images/reports.png" Height="60" Margin="10,0" VerticalAlignment="Center"/>
                <TextBlock Text="REPORTS" 
                   Foreground="White" 
                   FontFamily="Segoe UI" 
                   FontWeight="Bold" 
                   FontSize="36" 
                   VerticalAlignment="Center" 
                   Margin="20,0,0,0"/>
            </StackPanel>
        </Border>
        <!-- DataGrid for displaying reports -->
        <DataGrid x:Name="inventorySalesDG" 
                  HorizontalAlignment="Center" 
                  Height="540" 
                  Margin="0,40,0,0" 
                  VerticalAlignment="Top" 
                  Width="1190" 
                  IsReadOnly="True" 
                  HorizontalScrollBarVisibility="Auto" 
                  VerticalScrollBarVisibility="Auto"
                  CanUserReorderColumns="False"
                  CanUserResizeColumns="False" 
                  AutoGenerateColumns="False" Grid.Row="1">



            <!-- Define the columns with TextWrapping using a TemplateColumn -->
            <DataGrid.Columns>
                <DataGridTextColumn Header="Transaction ID" Width="120" Binding="{Binding TransactionID}"  />
                <DataGridTemplateColumn Header="Tank ID" Width="140" >
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding TankID}" TextWrapping="Wrap" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <!-- Column with text wrapping -->
                <DataGridTemplateColumn Header="Product Name" Width="140" >
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding ProductName}" TextWrapping="Wrap" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTextColumn Header="Quantity" Width="100" Binding="{Binding Quantity}"  />
                <DataGridTemplateColumn Header="Unit Price" Width="140" >
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding UnitPrice}" TextWrapping="Wrap" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn Header="Total Price" Width="100" Binding="{Binding TotalPrice}" />
                <DataGridTextColumn Header="Payment Method" Width="140" Binding="{Binding PaymentMethod}" />

                <DataGridTextColumn Header="Paid Amount" Width="140" Binding="{Binding PaidAmount}" />
                <!--<DataGridTextColumn Header="Change Given" Width="*" Binding="{Binding ChangeGiven}" />-->
                <DataGridTextColumn Header="Date" Width="*" Binding="{Binding Date, StringFormat='dd/MM/yyyy hh:mm:ss'}" />
                <!--<DataGridTextColumn Header="Status" Width="*" Binding="{Binding Status}" /> -->
            </DataGrid.Columns>
        </DataGrid>


        <DataGrid x:Name="stockCheckDG" Visibility="Collapsed" HorizontalAlignment="Center" 
            Height="540" 
            Margin="0,40,0,0" 
            VerticalAlignment="Top" 
            Width="1190" 
            IsReadOnly="True" 
            HorizontalScrollBarVisibility="Auto" 
            VerticalScrollBarVisibility="Auto"
            CanUserReorderColumns="False"
            CanUserResizeColumns="False" 
            AutoGenerateColumns="False" Grid.Row="1">
            <DataGrid.Columns>
                <DataGridTextColumn Header="StockID" Binding="{Binding StocksID}" />
                <DataGridTextColumn Header="Quantity" Binding="{Binding Stocks}" />
                <DataGridTextColumn Header="Date Checked" Binding="{Binding Date}" />
            </DataGrid.Columns>
        </DataGrid>

        <!-- DataGrid for Sales by Product -->
        <DataGrid x:Name="salesByProductDG" Visibility="Collapsed" HorizontalAlignment="Center" 
Height="540" 
Margin="0,40,0,0" 
VerticalAlignment="Top" 
Width="1190" 
IsReadOnly="True" 
HorizontalScrollBarVisibility="Auto" 
VerticalScrollBarVisibility="Auto"
CanUserReorderColumns="False"
CanUserResizeColumns="False" 
AutoGenerateColumns="False" Grid.Row="1">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Product Name" Binding="{Binding ProductName}" />
                <DataGridTextColumn Header="Total Quantity Sold" Binding="{Binding TotalQuantitySold}" />
                <DataGridTextColumn Header="Total Sales" Binding="{Binding TotalSales}" />
            </DataGrid.Columns>
        </DataGrid>



        <!-- Header panel with labels (for selecting report filters) -->
        <Border BorderBrush="#8ecae6" BorderThickness="1" CornerRadius="5" Background="WhiteSmoke" Margin="25,152,15,621" Grid.RowSpan="2">
            <Grid HorizontalAlignment="Center" Height="94" VerticalAlignment="Top" Width="1190">
                <Label Content="Category" HorizontalAlignment="Left" Height="28" Margin="19,30,0,0" VerticalAlignment="Top" Width="106" FontSize="14" FontWeight="Bold"/>
                <Label Content="Begin Date" HorizontalAlignment="Left" Height="28" VerticalAlignment="Top" Width="83" FontSize="14" FontWeight="Bold" Margin="450,31,0,0"/>
                <Label Content="End Date" HorizontalAlignment="Left" Height="28" Margin="722,29,0,0" VerticalAlignment="Top" Width="76" FontSize="14" FontWeight="Bold"/>
            </Grid>
        </Border>

        <!-- DatePickers and ComboBox below the header -->
        <DatePicker x:Name="beginDatePicker" HorizontalAlignment="Left" Height="30" Margin="556,175,0,0" VerticalAlignment="Top" Width="175" FontSize="14" Grid.RowSpan="2" />
        <DatePicker x:Name="endDatePicker" HorizontalAlignment="Left" Height="30" Margin="818,174,0,0" VerticalAlignment="Top" Width="175" FontSize="14" Grid.RowSpan="2" />
        <ComboBox x:Name="categoryComboBox" HorizontalAlignment="Left" Height="30" Margin="120,178,0,0" VerticalAlignment="Top" Width="200" FontSize="14" SelectionChanged="categoryComboBox_SelectionChanged" Grid.RowSpan="2"/>

        <!-- Pagination Controls -->
        <Button x:Name="previousButton" HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="42" Height="30" Margin="480,0,0,25" Click="PreviousButton_Click" Background="AliceBlue" Grid.Row="1">
            <Button.Content>
                <Image Source="/View/UserControls/back.png"/>
            </Button.Content>
        </Button>

        <Button x:Name="nextButton" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="42" Height="30" Margin="0,0,540,25" Click="NextButton_Click" Background="AliceBlue" BorderBrush="{x:Null}" Grid.Row="1">
            <Button.Content>
                <Image Source="/View/UserControls/next.png" />
            </Button.Content>
        </Button>

        <!-- Page Indicator -->
        <TextBlock x:Name="pageIndicator" FontSize="16" Margin="530,609,594,17" Foreground="Black" Grid.Row="1" Text="Page"/>


        <Button Content="Apply" HorizontalAlignment="Left" Margin="1018,178,0,0" VerticalAlignment="Top" Width="82" FontSize="16" Click="ApplyFilterButton_Click" Height="36" Grid.RowSpan="2"/>

        <Button Content="Clear" HorizontalAlignment="Left" Margin="1111,178,0,0" VerticalAlignment="Top" Width="83" Height="36" FontSize="16" FontWeight="Bold" Background="Red" Foreground="White" Click="CancelFilterButton_Click" Grid.RowSpan="2"/>

        <Button Content="Generate Report" HorizontalAlignment="Left" Margin="1046,598,0,0" VerticalAlignment="Top" Width="148" Click="PrintPreview_Click" Height="34" Background="#2ecc71" Foreground="White" Grid.Row="1"/>

    </Grid>


</UserControl>