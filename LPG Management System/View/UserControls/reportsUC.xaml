<UserControl x:Class="LPG_Management_System.View.UserControls.reportsUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LPG_Management_System.View.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="850" d:DesignWidth="1220" >


    <Grid Background="#FF8ECAE6">
        <!-- DataGrid for displaying reports -->
        <DataGrid x:Name="reportsDG" 
                  HorizontalAlignment="Left" 
                  Height="561" 
                  Margin="15,232,15,0" 
                  VerticalAlignment="Top" 
                  Width="1200" 
                  IsReadOnly="True" 
                  HorizontalScrollBarVisibility="Auto" 
                  VerticalScrollBarVisibility="Auto"
                  CanUserReorderColumns="False"
                  AutoGenerateColumns="False">



            <!-- Define the columns with TextWrapping using a TemplateColumn -->
            <DataGrid.Columns>
                <DataGridTextColumn Header="Transaction ID" Width="120" Binding="{Binding TransactionID}"  />
                <DataGridTemplateColumn Header="Tank ID" Width="140" >
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding TankID}" TextWrapping="Wrap" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <!-- Column with text wrapping -->
                <DataGridTemplateColumn Header="Product Name" Width="140" >
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding ProductName}" TextWrapping="Wrap" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTextColumn Header="Quantity" Width="100" Binding="{Binding Quantity}" />
                <DataGridTextColumn Header="Unit Price" Width="100" Binding="{Binding UnitPrice}" />
                <DataGridTextColumn Header="Total Price" Width="100" Binding="{Binding TotalPrice}" />
                <DataGridTextColumn Header="Payment Method" Width="140" Binding="{Binding PaymentMethod}" />

                <DataGridTextColumn Header="Paid Amount" Width="140" Binding="{Binding PaidAmount}" />
                <!--<DataGridTextColumn Header="Change Given" Width="*" Binding="{Binding ChangeGiven}" />-->
                <DataGridTextColumn Header="Date" Width="*" Binding="{Binding Date, StringFormat='dd/MM/yyyy hh:mm:ss'}" />
                <!--<DataGridTextColumn Header="Status" Width="*" Binding="{Binding Status}" /> -->
            </DataGrid.Columns>
        </DataGrid>

        <!-- Header panel with labels (for selecting report filters) -->
        <Grid HorizontalAlignment="Left" Height="94" VerticalAlignment="Top" Width="1190" Background="WhiteSmoke" Margin="15,136,0,0">
            <Label Content="Category" HorizontalAlignment="Left" Height="42" Margin="14,28,0,0" VerticalAlignment="Top" Width="106" FontSize="14" FontWeight="Bold"/>
            <Label Content="Begin Date" HorizontalAlignment="Left" Height="28" VerticalAlignment="Top" Width="106" FontSize="14" FontWeight="Bold" Margin="488,34,0,0"/>
            <Label Content="End Date" HorizontalAlignment="Left" Height="28" Margin="750,38,0,0" VerticalAlignment="Top" Width="106" FontSize="14" FontWeight="Bold"/>
        </Grid>

        <Border Background="#003566" Height="70" VerticalAlignment="Top" CornerRadius="0,0,0,0" Margin="-2,0,-9,0">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="20,0,0,0">
                <Image Source="/Images/reports.png" Height="60" Margin="10,0" VerticalAlignment="Center"/>
                <TextBlock Text="REPORTS" 
                   Foreground="White" 
                   FontFamily="Segoe UI" 
                   FontWeight="Bold" 
                   FontSize="36" 
                   VerticalAlignment="Center" 
                   Margin="20,0,0,0"/>
            </StackPanel>
        </Border>

        <!-- DatePickers and ComboBox below the header -->
        <DatePicker x:Name="beginDatePicker" HorizontalAlignment="Left" Height="30" Margin="588,164,0,0" VerticalAlignment="Top" Width="159" FontSize="16" />
        <DatePicker x:Name="endDatePicker" HorizontalAlignment="Left" Height="34" Margin="840,166,0,0" VerticalAlignment="Top" Width="159" FontSize="16" />
        <ComboBox x:Name="categoryComboBox" HorizontalAlignment="Left" Height="34" Margin="125,169,0,0" VerticalAlignment="Top" Width="154" FontSize="16" SelectionChanged="categoryComboBox_SelectionChanged"/>

        <!-- Pagination Controls -->
        <Button HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="45" Height="30" Margin="523,0,0,17" Click="PreviousButton_Click" Background="AliceBlue">
            <Button.Content>
                <Image Source="/View/UserControls/back.png"/>
            </Button.Content>
        </Button>

        <Button HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="45" Height="30" Margin="0,0,520,17" Click="NextButton_Click" Background="AliceBlue">
            <Button.Content>
                <Image Source="/View/UserControls/next.png" />
            </Button.Content>
        </Button>

        <!-- Page Indicator -->
        <TextBlock x:Name="pageIndicator" HorizontalAlignment="Center" VerticalAlignment="Bottom" FontSize="16" Margin="0,0,0,30" Foreground="Black"/>

        <Button Content="Apply" HorizontalAlignment="Left" Margin="1013,165,0,0" VerticalAlignment="Top" Width="77" FontSize="16" Click="ApplyFilterButton_Click" Height="42"/>

        <Button Content="Clear" HorizontalAlignment="Left" Margin="1100,166,0,0" VerticalAlignment="Top" Width="83" Height="41" FontSize="16" FontWeight="Bold" Background="Red" Foreground="White" Click="CancelFilterButton_Click"/>

        <Button Content="Print Preview" HorizontalAlignment="Left" Margin="1045,803,0,0" VerticalAlignment="Top" Width="138" Click="PrintPreview_Click" Height="38"/>

    </Grid>


</UserControl>


