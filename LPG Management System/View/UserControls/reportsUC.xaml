<UserControl x:Class="LPG_Management_System.View.UserControls.reportsUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LPG_Management_System.View.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="850" d:DesignWidth="1220" >
    <Grid Background="#FF8ECAE6">
        <Grid.ColumnDefinitions>
        </Grid.ColumnDefinitions>
        <DataGrid x:Name="reportsDG" HorizontalAlignment="Left" Height="673" Margin="28,133,0,0" VerticalAlignment="Top" Width="1169" d:ItemsSource="{d:SampleData ItemCount=5}" ColumnWidth="*" SelectionChanged="reportsDG_SelectionChanged" IsReadOnly="True" />
        <Grid HorizontalAlignment="Left" Height="92" VerticalAlignment="Top" Width="1169" Background="#FFD2D2D2" Margin="28,36,0,0" >
            <Label Content="Category" HorizontalAlignment="Left" Height="43" Margin="10,28,0,0" VerticalAlignment="Top" Width="106" FontSize="14" FontWeight="Bold"/>
            <Label Content="Begin Date" HorizontalAlignment="Left" Height="43" Margin="630,17,0,0" VerticalAlignment="Top" Width="106" FontSize="14" FontWeight="Bold"/>
            <Label Content="End Date" HorizontalAlignment="Left" Height="44" Margin="909,19,0,0" VerticalAlignment="Top" Width="106" FontSize="14" FontWeight="Bold"/>
        </Grid>
        <DatePicker HorizontalAlignment="Left" Height="34" Margin="757,60,0,0" VerticalAlignment="Top" Width="159" FontSize="16"/>
        <DatePicker HorizontalAlignment="Left" Height="35" Margin="1015,59,0,0" VerticalAlignment="Top" Width="159" FontSize="16"/>
        <ComboBox x:Name="categoryComboBox" HorizontalAlignment="Left" Height="34" Margin="139,60,0,0" VerticalAlignment="Top" Width="154" FontSize="16" SelectionChanged="categoryComboBox_SelectionChanged"/>


    </Grid>
</UserControl>
