<UserControl x:Class="LPG_Management_System.View.UserControls.reportsUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LPG_Management_System.View.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="850" d:DesignWidth="1220" >
    

    <Grid Background="#FF8ECAE6">
        <!-- DataGrid for displaying reports -->
        <DataGrid x:Name="reportsDG" 
                  HorizontalAlignment="Center" 
                  Height="561" 
                  Margin="0,245,0,0" 
                  VerticalAlignment="Top" 
                  Width="1200" 
                  IsReadOnly="True" 
                  HorizontalScrollBarVisibility="Auto" 
                  VerticalScrollBarVisibility="Auto"
                  CanUserReorderColumns="False"
                  AutoGenerateColumns="False">

            <!-- Define the columns with TextWrapping using a TemplateColumn -->
            <DataGrid.Columns>
                <DataGridTextColumn Header="Transaction ID" Width="120" Binding="{Binding TransactionID}"  />
                <DataGridTemplateColumn Header="Tank ID" Width="140" >
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding TankID}" TextWrapping="Wrap" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <!-- Column with text wrapping -->
                <DataGridTemplateColumn Header="Product Name" Width="140" >
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding ProductName}" TextWrapping="Wrap" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTextColumn Header="Quantity" Width="100" Binding="{Binding Quantity}" />
                <DataGridTextColumn Header="Unit Price" Width="100" Binding="{Binding UnitPrice}" />
                <DataGridTextColumn Header="Total Price" Width="100" Binding="{Binding TotalPrice}" />
                <DataGridTextColumn Header="Payment Method" Width="140" Binding="{Binding PaymentMethod}" />

                <DataGridTextColumn Header="Paid Amount" Width="140" Binding="{Binding PaidAmount}" />
                <!--<DataGridTextColumn Header="Change Given" Width="*" Binding="{Binding ChangeGiven}" />-->
                <DataGridTextColumn Header="Date" Width="*" Binding="{Binding Date, StringFormat='yyyy-MM-dd hh:mm:ss tt'}" />
                <!--<DataGridTextColumn Header="Status" Width="*" Binding="{Binding Status}" /> -->
            </DataGrid.Columns>
        </DataGrid>

        <!-- Header panel with labels (for selecting report filters) -->
        <Grid HorizontalAlignment="Center" Height="92" VerticalAlignment="Top" Width="1188" Background="WhiteSmoke" Margin="0,138,0,0">
            <Label Content="Category" HorizontalAlignment="Left" Height="43" Margin="10,28,0,0" VerticalAlignment="Top" Width="106" FontSize="14" FontWeight="Bold"/>
            <Label Content="Begin Date" HorizontalAlignment="Left" Height="43" Margin="630,17,0,0" VerticalAlignment="Top" Width="106" FontSize="14" FontWeight="Bold"/>
            <Label Content="End Date" HorizontalAlignment="Left" Height="44" Margin="909,19,0,0" VerticalAlignment="Top" Width="106" FontSize="14" FontWeight="Bold"/>
        </Grid>

        <!-- DatePickers and ComboBox below the header -->
        <DatePicker x:Name="beginDatePicker" HorizontalAlignment="Left" Height="34" Margin="751,162,0,0" VerticalAlignment="Top" Width="159" FontSize="16" />
        <DatePicker x:Name="endDatePicker" HorizontalAlignment="Left" Height="35" Margin="1009,161,0,0" VerticalAlignment="Top" Width="159" FontSize="16" />
        <ComboBox x:Name="categoryComboBox" HorizontalAlignment="Left" Height="34" Margin="133,162,0,0" VerticalAlignment="Top" Width="154" FontSize="16" SelectionChanged="categoryComboBox_SelectionChanged"/>

        <!-- Pagination Controls -->
        <Button HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="47" Height="35" Margin="520,0,0,15" Click="PreviousButton_Click" Background="AliceBlue">
            <Button.Content>
                <Image Source="/Images/back.png"/>
            </Button.Content>
        </Button>

        <Button HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="47" Height="35" Margin="0,0,520,15" Click="NextButton_Click" Background="AliceBlue">
            <Button.Content>
                <Image Source="/Images/next.png" />
            </Button.Content>
        </Button>

        <!-- Page Indicator -->
        <TextBlock x:Name="pageIndicator" HorizontalAlignment="Center" VerticalAlignment="Bottom" FontSize="16" Margin="0,0,0,30" Foreground="Black"/>
    </Grid>


</UserControl>


