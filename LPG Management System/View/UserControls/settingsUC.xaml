<UserControl x:Class="LPG_Management_System.View.UserControls.settingsUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LPG_Management_System.View.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="860" d:DesignWidth="1233">
    <Grid>
        <!-- Wrap the Grid with a ScrollViewer -->
        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" Margin="0,0,10,0">
            <Grid Margin="0,0,10,0">
                <Grid Background="White" Margin="0,0,0,0">

                    <Label Content="Company Details" HorizontalAlignment="Left" Height="47" Margin="55,52,0,0" VerticalAlignment="Top" Width="221" FontSize="25" FontWeight="Bold" FontFamily="Segoe UI"/>
                    <Image Source="/View/UserControls/edit.png" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="281,60,0,0" Width="30" Height="30" Cursor="Hand" MouseDown="EditButton_Click"/>

                    <Label Content="Address:" HorizontalAlignment="Left" Height="35" Margin="55,173,0,0" VerticalAlignment="Top" Width="106" FontSize="15" FontFamily="Segoe UI"/>
                    <Label Content="Name:" HorizontalAlignment="Left" Height="32" Margin="55,136,0,0" VerticalAlignment="Top" Width="128" FontSize="15" FontFamily="Segoe UI"/>
                    <Label Content="Contact number:" HorizontalAlignment="Left" Height="32" Margin="55,215,0,0" VerticalAlignment="Top" Width="128" FontSize="15" FontFamily="Segoe UI"/>

                    <TextBox x:Name="NameTextBox" HorizontalAlignment="Left" Margin="210,136,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="190" Height="31" FontSize="14" FontFamily="Segoe UI"
                             BorderBrush="DimGray" BorderThickness="0.5" Background="#e5f3fd" IsReadOnly="True" TextChanged="TextBox_TextChanged"/>
                    <TextBox x:Name="AddressTextBox" HorizontalAlignment="Left" Margin="210,173,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="190" Height="31" FontSize="14" FontFamily="Segoe UI"
                             BorderBrush="DimGray" BorderThickness="0.5" Background="#e5f3fd" IsReadOnly="True"/>
                    <TextBox x:Name="ContactTextBox" HorizontalAlignment="Left" Margin="210,213,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="188" Height="31" FontSize="14" FontFamily="Segoe UI"
                             BorderBrush="DimGray" BorderThickness="0.5" Background="#e5f3fd" IsReadOnly="True"/>
                    <TextBox x:Name="EmailTextBox" HorizontalAlignment="Left" Margin="210,251,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="190" Height="31" FontSize="14" FontFamily="Segoe UI"
                    BorderBrush="DimGray" BorderThickness="0.5" Background="#e5f3fd" IsReadOnly="False"/>


                    <Label Content="Privacy and Security" HorizontalAlignment="Left" Height="45" Margin="55,357,0,0" VerticalAlignment="Top" Width="294" FontSize="25" FontWeight="Bold" FontFamily="Segoe UI"/>
                    <Label Content="username:" HorizontalAlignment="Left" Height="32" Margin="55,422,0,0" VerticalAlignment="Top" Width="128" FontSize="15" FontFamily="Segoe UI"/>
                    <Label Content="password:" HorizontalAlignment="Left" Height="32" Margin="55,462,0,0" VerticalAlignment="Top" Width="128" FontSize="15" FontFamily="Segoe UI"/>
                    <TextBox x:Name="UsernameTextBox" HorizontalAlignment="Left" Margin="155,421,0,0" VerticalAlignment="Top" Width="190" Height="31" FontSize="14" FontFamily="Segoe UI"
                    BorderBrush="DimGray" BorderThickness="0.5" Background="#e5f3fd" IsReadOnly="True"/>
                    <PasswordBox x:Name="PasswordTextBox" HorizontalAlignment="Left" Margin="155,456,0,0" VerticalAlignment="Top" Width="190" Height="31" FontSize="14" FontFamily="Segoe UI"
                    BorderBrush="DimGray" BorderThickness="0.5" Background="#e5f3fd" IsEnabled="True"/>
                    <Button x:Name="SavePrivacyButton" Content="Save" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="305,509,0,0" Width="100" Height="30" FontSize="14" FontFamily="Segoe UI" IsEnabled="False" Click="SavePrivacyButton_Click"/>
                    <Button x:Name="CancelPrivacyButton" Content="Cancel" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="196,509,0,0" Width="100" Height="30" FontSize="14" FontFamily="Segoe UI" IsEnabled="False" Click="CancelPrivacyButton_Click"/>
                    <Image Source="/View/UserControls/edit.png" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="315,372,0,0" Width="50" Height="30" Cursor="Hand" MouseDown="EditPrivacyButton_Click">
                        <Image.OpacityMask>
                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                <GradientStop Color="Black"/>
                                <GradientStop Color="#FFE21313" Offset="1"/>
                            </LinearGradientBrush>
                        </Image.OpacityMask>
                    </Image>
                    <Button x:Name="SaveButton" Content="Save" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="305,309,0,0" Width="100" Height="30" FontSize="14" FontFamily="Segoe UI" IsEnabled="False" Click="SaveButton_Click"/>
                    <Button x:Name="CancelButton" Content="Cancel" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="196,309,0,0" Width="100" Height="30" FontSize="14" FontFamily="Segoe UI" IsEnabled="False" Click="CancelButton_Click"/>


                    <Label Content="Email address:" HorizontalAlignment="Left" Height="32" Margin="55,252,0,0" VerticalAlignment="Top" Width="128" FontSize="15" FontFamily="Segoe UI"/>
                    <Grid HorizontalAlignment="Left" Height="250" Margin="872,64,0,0" VerticalAlignment="Top" Width="250" Background="#FFF0F0F0"/>
                    <Button Content="Upload Image" HorizontalAlignment="Left" Margin="953,330,0,0" VerticalAlignment="Top" Click="UploadImage_Click" Height="50"/>
                    <Image x:Name="logoPlaceholder" HorizontalAlignment="Right" Height="250" Margin="0,64,91,0" VerticalAlignment="Top" Width="250" OpacityMask="#FFC3BABA"/>
                    <Label Content="Company Logo" HorizontalAlignment="Left" Height="48" Margin="630,162,0,0" VerticalAlignment="Top" Width="222" FontSize="25" FontWeight="Bold" FontFamily="Segoe UI"/>
                </Grid>

            </Grid>
        </ScrollViewer>
    </Grid>
</UserControl>
