<UserControl x:Class="LPG_Management_System.View.UserControls.settingsUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LPG_Management_System.View.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="860" d:DesignWidth="1233">

    <UserControl.Resources>
        <LinearGradientBrush x:Key="BackgroundGradient" StartPoint="1,0" EndPoint="1,1">
            <GradientStop Color="WhiteSmoke" Offset="0.1" />
            <GradientStop Color="#8ecae6" Offset="2.0" />
        </LinearGradientBrush>
    </UserControl.Resources>

    <Grid Background="{StaticResource BackgroundGradient}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="37*"/>
            <ColumnDefinition Width="613*"/>
            <ColumnDefinition Width="583*"/>
        </Grid.ColumnDefinitions>
        <!-- Wrap the Grid with a ScrollViewer -->


        <Label Content="Company Details" HorizontalAlignment="Left" Height="48" Margin="14,33,0,0" VerticalAlignment="Top" Width="221" FontSize="25" FontWeight="Bold" FontFamily="Segoe UI" Grid.Column="2"/>
        <Button Width="56" Height="40" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,41,0,0" Cursor="Hand"  Click="EditButton_Click" Grid.Column="2">
            <Button.Content>
                <Image Source="/View/UserControls/edit.png" Width="30" Height="22" />
            </Button.Content>
        </Button>


        <Label Content="Address:" HorizontalAlignment="Left" Height="35" Margin="14,153,0,0" VerticalAlignment="Top" Width="106" FontSize="15" FontFamily="Segoe UI" Grid.Column="2"/>
        <Label Content="Name:" HorizontalAlignment="Left" Height="32" Margin="15,116,0,0" VerticalAlignment="Top" Width="128" FontSize="15" FontFamily="Segoe UI" Grid.Column="2"/>
        <Label Content="Contact number:" HorizontalAlignment="Left" Height="32" Margin="15,195,0,0" VerticalAlignment="Top" Width="128" FontSize="15" FontFamily="Segoe UI" Grid.Column="2"/>

        <TextBox x:Name="NameTextBox" HorizontalAlignment="Left" Margin="169,116,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="190" Height="31" FontSize="14" FontFamily="Segoe UI"
                             BorderBrush="DimGray" BorderThickness="0.5" Background="#e5f3fd" IsReadOnly="True" TextChanged="TextBox_TextChanged" Grid.Column="2"/>
        <TextBox x:Name="AddressTextBox" HorizontalAlignment="Left" Margin="169,153,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="190" Height="31" FontSize="14" FontFamily="Segoe UI"
                             BorderBrush="DimGray" BorderThickness="0.5" Background="#e5f3fd" IsReadOnly="True" Grid.Column="2"/>
        <TextBox x:Name="ContactTextBox" HorizontalAlignment="Left" Margin="169,193,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="188" Height="31" FontSize="14" FontFamily="Segoe UI"
                             BorderBrush="DimGray" BorderThickness="0.5" Background="#e5f3fd" IsReadOnly="True" Grid.Column="2"/>
        <TextBox x:Name="EmailTextBox" HorizontalAlignment="Left" Margin="169,231,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="190" Height="31" FontSize="14" FontFamily="Segoe UI"
                    BorderBrush="DimGray" BorderThickness="0.5" Background="#e5f3fd" IsReadOnly="False" Grid.Column="2"/>


        <Label Content="Privacy and Security" HorizontalAlignment="Left" Height="44" Margin="15,393,0,0" VerticalAlignment="Top" Width="294" FontSize="25" FontWeight="Bold" FontFamily="Segoe UI" Grid.Column="2"/>
        <Label Content="username:" HorizontalAlignment="Left" Height="32" Margin="15,459,0,0" VerticalAlignment="Top" Width="128" FontSize="15" FontFamily="Segoe UI" Grid.Column="2"/>
        <Label Content="password:" HorizontalAlignment="Left" Height="32" Margin="15,499,0,0" VerticalAlignment="Top" Width="128" FontSize="15" FontFamily="Segoe UI" Grid.Column="2"/>
        <TextBox x:Name="UsernameTextBox" HorizontalAlignment="Left" Margin="114,459,0,0" VerticalAlignment="Top" Width="190" Height="30" FontSize="14" FontFamily="Segoe UI"
                    BorderBrush="DimGray" BorderThickness="0.5" Background="#e5f3fd" IsReadOnly="True" Grid.Column="2"/>
        <PasswordBox x:Name="PasswordTextBox" HorizontalAlignment="Left" Margin="114,493,0,0" VerticalAlignment="Top" Width="190" Height="32" FontSize="14" FontFamily="Segoe UI"
                    BorderBrush="DimGray" BorderThickness="0.5" Background="#e5f3fd" IsEnabled="True" Grid.Column="2"/>
        <Button x:Name="SavePrivacyButton" Content="Save" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="264,547,0,0" Width="100" Height="30" FontSize="14" FontFamily="Segoe UI" IsEnabled="False" Click="SavePrivacyButton_Click" Grid.Column="2"/>
        <Button x:Name="CancelPrivacyButton" Content="Cancel" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="155,547,0,0" Width="100" Height="30" FontSize="14" FontFamily="Segoe UI" IsEnabled="False" Click="CancelPrivacyButton_Click" Grid.Column="2"/>
        <Button Width="56" Height="40" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="284,399,0,0" Cursor="Hand" MouseDown="EditPrivacyButton_Click" Click="EditPrivacyButton_Click" Grid.Column="2">
            <Button.Content>
                <Image Source="/View/UserControls/edit.png" Width="25" Height="30" />
            </Button.Content>
        </Button>
        <Button x:Name="SaveButton" Content="Save" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="264,289,0,0" Width="100" Height="30" FontSize="14" FontFamily="Segoe UI" IsEnabled="False" Click="SaveButton_Click" Grid.Column="2"/>
        <Button x:Name="CancelButton" Content="Cancel" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="155,289,0,0" Width="100" Height="30" FontSize="14" FontFamily="Segoe UI" IsEnabled="False" Click="CancelButton_Click" Grid.Column="2"/>


        <Label Content="Email address:" HorizontalAlignment="Left" Height="32" Margin="15,232,0,0" VerticalAlignment="Top" Width="128" FontSize="15" FontFamily="Segoe UI" Grid.Column="2"/>
        <Button Content="Upload Image" HorizontalAlignment="Left" Margin="102,399,0,0" VerticalAlignment="Top" Click="UploadImage_Click" Height="50" Width="147" Grid.Column="1"/>

        <Border BorderBrush="Black" BorderThickness="2" CornerRadius="10" HorizontalAlignment="Right" Margin="0,116,306,0" VerticalAlignment="Top" Grid.Column="1">
            <Image x:Name="logoPlaceholder" Height="260" Width="276" OpacityMask="#FFC3BABA"/>
        </Border>

        <Label Content="Company Logo" HorizontalAlignment="Left" Height="48" Margin="27,33,0,0" VerticalAlignment="Top" Width="222" FontSize="25" FontWeight="Bold" FontFamily="Segoe UI" Grid.Column="1"/>


    </Grid>
</UserControl>