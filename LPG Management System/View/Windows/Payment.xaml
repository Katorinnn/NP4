<Window x:Class="LPG_Management_System.View.Windows.Payment"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LPG_Management_System.View.Windows"
        mc:Ignorable="d"
        Title="Payment" Height="300" Width="500" WindowStartupLocation="CenterScreen">
    <Grid>
        <Label x:Name="TotalAmountLabel" HorizontalAlignment="Left" Margin="200,40,0,0" VerticalAlignment="Top" FontSize="16"/>

        <Button x:Name="amountBtn" Content="Enter Amount" HorizontalAlignment="Center" Margin="0,190,0,0" VerticalAlignment="Top" Click="amountBtn_Click" FontSize="15"/>
        <TextBox x:Name="amounttxtBox" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Center" Width="180" TextChanged="amounttxtBox_TextChanged" FontSize="15"/>

    </Grid>
</Window>
