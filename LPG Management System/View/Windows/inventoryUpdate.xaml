<Window x:Class="LPG_Management_System.View.inventoryUpdate"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LPG_Management_System.View"
        mc:Ignorable="d"
        Title="inventoryUpdate" Height="497" Width="682" WindowStartupLocation="CenterScreen" AutomationProperties.IsRequiredForForm="True"  ResizeMode="NoResize" WindowStyle="None"
        Background="{x:Null}" AllowsTransparency="True">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </Window.Resources>

    <Grid>
        <!-- Border to wrap the content and provide rounded corners -->
        <Border Margin="20" Background="#d1e5f4" BorderBrush="Gray" BorderThickness="1,1,1,1" CornerRadius="15">
            <Border.Effect>
                <DropShadowEffect Color="Gray" BlurRadius="30" ShadowDepth="-5" Opacity="0.3"/>
            </Border.Effect>
            <!-- Close Button -->
            <Button Content="X" HorizontalAlignment="Right" VerticalAlignment="Top" Width="46" Height="32" 
            Margin="0,6,1,0" Click="Button_Click" 
            Background="Transparent" Foreground="Gray" Cursor="Hand" 
            BorderBrush="{x:Null}" FontSize="19"/>

        </Border>


        <!-- Form Fields -->

        <Label Content="Stocks:" HorizontalAlignment="Left" Margin="89,198,0,0" VerticalAlignment="Top" 
       FontWeight="Bold" FontSize="16" Width="80"/>
        <TextBox x:Name="stockstxtBox" HorizontalAlignment="Left" Margin="199,198,0,0" VerticalAlignment="Top" 
       Width="200" Height="30" Background="#e5f3fd" BorderBrush="Gray" BorderThickness="1" FontSize="15" />

        <Label Content="Brand:" HorizontalAlignment="Left" Margin="90,106,0,0" VerticalAlignment="Top" 
       FontWeight="Bold" FontSize="15" Width="80"/>
        <TextBox x:Name="brandtxtBox" HorizontalAlignment="Left" Margin="200,106,0,0" VerticalAlignment="Top" 
         Width="200" Height="30" Background="#e5f3fd" BorderBrush="Gray" BorderThickness="1"/>

        <Label Content="Size:" HorizontalAlignment="Left" Margin="90,154,0,0" VerticalAlignment="Top" 
       FontWeight="Bold" FontSize="15" Width="80"/>
        <TextBox x:Name="sizetxtBox" Width="150" Height="30" Background="#e5f3fd" BorderBrush="Gray" BorderThickness="1" FontSize="15"  Margin="201,152,331,315"/>
        <ComboBox x:Name="unitComboBox" Width="49" Height="30" FontSize="15" SelectedIndex="0" Background="#e5f3fd" BorderBrush="Gray" BorderThickness="1" Margin="350,152,283,0" VerticalAlignment="Top">
            <ComboBoxItem Content="kg"/>
            <ComboBoxItem Content="g"/>
        </ComboBox>

        <Label Content="Price:" HorizontalAlignment="Left" Margin="91,245,0,0" VerticalAlignment="Top" 
       FontWeight="Bold" FontSize="15" Width="80"/>
        <TextBox x:Name="pricetxtBox" HorizontalAlignment="Left" Margin="199,245,0,0" VerticalAlignment="Top" 
         Width="200" Height="30" Background="#e5f3fd" BorderBrush="Gray" BorderThickness="1"/>


        <Button x:Name="updateBtn" Content="UPDATE" HorizontalAlignment="Left" VerticalAlignment="Top" 
            Width="150" Height="59" Margin="260,368,0,0" 
            Background="#0078D7" Foreground="White" BorderBrush="Gray" BorderThickness="1" Cursor="Hand" RenderTransformOrigin="0.601,-0.207" Click="updateBtn_Click" />


        <Button x:Name="imageSelectBtn" Content="Select Image" HorizontalAlignment="Left" 
                Margin="431,268,0,0" VerticalAlignment="Top" 
                Width="160" Height="30" 
                Background="#0078D7" Foreground="White" BorderBrush="Gray" BorderThickness="1" Cursor="Hand"/>

        <Border HorizontalAlignment="Left" Margin="430,100,0,0" VerticalAlignment="Top" 
                Width="160" Height="160" BorderBrush="Gray" BorderThickness="1" CornerRadius="5">
            <Image x:Name="productImagePreview" Stretch="Uniform" />
        </Border>
        <Label Content="Tank ID:" HorizontalAlignment="Left" Margin="90,58,0,0" VerticalAlignment="Top" 
            FontWeight="Bold" FontSize="15" Width="80"/>
        <TextBox x:Name="tankIDtxtBox" HorizontalAlignment="Left" Margin="200,58,0,0" VerticalAlignment="Top" 
            Width="200" Height="30" Background="#e5f3fd" BorderBrush="Gray" BorderThickness="1"/>

    </Grid>
</Window>
