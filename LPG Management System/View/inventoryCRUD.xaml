<Window x:Class="LPG_Management_System.View.inventoryCRUD"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LPG_Management_System.View"
        mc:Ignorable="d"
        Title="inventoryCRUD" Height="497" Width="682" WindowStartupLocation="CenterScreen" AutomationProperties.IsRequiredForForm="True"  ResizeMode="NoResize" WindowStyle="None"
        Background="{x:Null}" AllowsTransparency="True">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </Window.Resources>

    <Grid>
        <!-- Border to wrap the content and provide rounded corners -->
        <Border Margin="18,24,22,16" Background="#d1e5f4" BorderBrush="Gray" BorderThickness="1,1,1,1" CornerRadius="10">
            <Border.Effect>
                <DropShadowEffect Color="Gray" BlurRadius="30" ShadowDepth="-5" Opacity="0.3"/>
            </Border.Effect>
            <!-- Close Button -->
            <Button Content="X" HorizontalAlignment="Right" VerticalAlignment="Top" Width="46" Height="32" 
                Margin="0,6,1,0" Click="Button_Click" 
                Background="Transparent" Foreground="Gray" Cursor="Hand" 
                BorderBrush="{x:Null}" FontSize="19"/>

        </Border>

        <!-- Form Fields -->
        <!-- <Label Content="Tank ID:" HorizontalAlignment="Left" Margin="89,66,0,0" VerticalAlignment="Top" 
           FontWeight="Bold" FontSize="16" Width="80"/> -->

        <!--<TextBox x:Name="tankIDtxtBox" HorizontalAlignment="Left" Height="30" Margin="198,66,0,401" Width="200" IsReadOnly="True" FontSize="15" Background="#e5f3fd" BorderBrush="Gray" BorderThickness="1" IsHitTestVisible="False"/>  -->
        <!--<Button Content="" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="370,71,0,0" Width="25"  Height="25" RenderTransformOrigin="0.027,0.59" Click="GenerateTankIDButton_Click" >
            <Button.BorderBrush>
                <ImageBrush/>
            </Button.BorderBrush>
            <Button.Background>
                <ImageBrush ImageSource="/View/refresh.png"/>
            </Button.Background>
        </Button> -->

        <Label Content="Brand:" HorizontalAlignment="Left" Margin="81,68,0,0" VerticalAlignment="Top" 
           FontWeight="Bold" FontSize="16" Width="80"/>
        <TextBox x:Name="brandtxtBox" HorizontalAlignment="Left" Margin="191,68,0,0" VerticalAlignment="Top" 
             Width="200" Height="30" Background="#e5f3fd" BorderBrush="Gray" BorderThickness="1" FontSize="15" PreviewTextInput="brandtxtBox_PreviewTextInput"/>

        <Label Content="Size :" HorizontalAlignment="Left" Margin="81,118,0,0" VerticalAlignment="Top" 
           FontWeight="Bold" FontSize="16" Width="80"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="191,118,0,0" VerticalAlignment="Top">
            <!-- TextBox for size input -->
            <TextBox x:Name="sizetxtBox" Width="150" Height="30" Background="#e5f3fd" BorderBrush="Gray" BorderThickness="1" FontSize="15" PreviewTextInput="sizetxtBox_PreviewTextInput"/>
            <ComboBox x:Name="unitComboBox" Width="49" Height="30" FontSize="15" SelectedIndex="0" Background="#e5f3fd" BorderBrush="Gray" BorderThickness="1">
                <ComboBoxItem Content="kg"/>
                <ComboBoxItem Content="g"/>
            </ComboBox>

            <!-- ComboBox for unit selection (kg, g) -->
        </StackPanel>


        <Label Content="Price:" HorizontalAlignment="Left" Margin="81,212,0,0" VerticalAlignment="Top" 
           FontWeight="Bold" FontSize="16" Width="80"/>
        <TextBox x:Name="pricetxtBox" HorizontalAlignment="Left" Margin="191,211,0,0" VerticalAlignment="Top" 
             Width="200" Height="30" Background="#e5f3fd" BorderBrush="Gray" BorderThickness="1" FontSize="15" PreviewTextInput="pricetxtBox_PreviewTextInput"/>

        <Label Content="Stocks:" HorizontalAlignment="Left" Margin="81,168,0,0" VerticalAlignment="Top" 
               FontWeight="Bold" FontSize="16" Width="80"/>
        <TextBox x:Name="stockstxtBox" HorizontalAlignment="Left" Margin="191,168,0,0" VerticalAlignment="Top" 
               Width="200" Height="30" Background="#e5f3fd" BorderBrush="Gray" BorderThickness="1" FontSize="15" PreviewTextInput="stockstxtBox_PreviewTextInput"/>

        <Label Content="Date:" HorizontalAlignment="Left" Margin="81,269,0,0" VerticalAlignment="Top" 
       FontWeight="Bold" FontSize="16" Width="80"/>
        <DatePicker x:Name="datePicker" 
            HorizontalAlignment="Left" 
            Margin="191,269,0,0" 
            VerticalAlignment="Top" 
            Width="200" 
            Height="30" 
            Background="#e5f3fd" 
            BorderBrush="Gray" 
            BorderThickness="1" 
            FontSize="15" 
            SelectedDate="{Binding Date, Mode=TwoWay}" 
            IsTodayHighlighted="True" />



        <!-- Image Section -->
        <Border HorizontalAlignment="Left" Margin="430,66,0,0" VerticalAlignment="Top" 
            Width="160" Height="160" BorderBrush="Gray" BorderThickness="1" CornerRadius="5">
            <Image x:Name="productImagePreview" Stretch="Uniform" />
        </Border>
        <Button x:Name="imageSelectBtn" Content="Select Image" HorizontalAlignment="Left" 
            Margin="430,254,0,0" VerticalAlignment="Top" 
            Width="160" Height="30" Click="imageSelectBtn_Click" 
            Background="#0078D7" Foreground="White" BorderBrush="Gray" BorderThickness="1" Cursor="Hand"/>

        <!-- Add Button -->
        <Button x:Name="addBtn" Content="ADD" HorizontalAlignment="Left" VerticalAlignment="Top" 
            Width="150" Height="50" Margin="279,350,0,0" Click="addBtn_Click" 
            Background="#0078D7" Foreground="White" BorderBrush="Gray" BorderThickness="1" Cursor="Hand" RenderTransformOrigin="0.601,-0.207"/>

    </Grid>
</Window>
